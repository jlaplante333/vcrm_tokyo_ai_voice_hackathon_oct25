# Environment variables for CRMblr Demo
# Copy this file to .env.demo and fill in your values

# Database
DATABASE_URL="postgresql://crmblr:demo_password@localhost:5432/crmblr"

# AWS Configuration (Demo)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="demo_access_key"
AWS_SECRET_ACCESS_KEY="demo_secret_key"

# Cognito (Demo)
COGNITO_USER_POOL_ID="demo_user_pool_id"
COGNITO_CLIENT_ID="demo_client_id"
COGNITO_DOMAIN="demo_cognito_domain"

# S3 (Demo)
S3_BUCKET="demo_s3_bucket"

# Redis (for BullMQ)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Bedrock (for AI)
BEDROCK_MODEL_ID="anthropic.claude-3-sonnet-20240229-v1:0"

# OpenAI (alternative to Bedrock)
OPENAI_API_KEY="demo_openai_key"
USE_OPENAI="false"

# JWT
JWT_SECRET="demo_jwt_secret"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# API URL
API_URL="http://localhost:3001"

# Demo Tenant Configuration
DEMO_MODE="true"
